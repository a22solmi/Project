<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:background="@color/PrimaryBright">

    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/appBarLayout"
        app:layout_constraintBottom_toBottomOf="@id/paradigm_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="NotSibling" />

    <LinearLayout
        android:id="@+id/paradigm_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/detail_image"
        app:layout_constraintBottom_toTopOf="@id/detail_use"
        app:layout_constraintStart_toStartOf="parent"
        android:divider="@drawable/divider"
        android:showDividers="middle">

        <TextView
            android:id="@+id/detail_paradigm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/TextBody"
            android:textSize="18sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/detail_use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/paradigm_layout"
        app:layout_constraintBottom_toTopOf="@id/detail_example"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/TextBody"
        android:textSize="18sp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/detail_example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_use"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/PrimaryDark"
        android:textSize="18sp"
        android:background="@drawable/code_background"
        android:layout_marginTop="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>