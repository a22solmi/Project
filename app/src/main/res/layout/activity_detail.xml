<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:background="@color/PrimaryBright">

    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/test"
        android:layout_alignStart="@+id/test"
        android:layout_alignEnd="@id/test"
        android:background="@drawable/image_background"
        android:padding="20dp"/>

    <LinearLayout
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="620px">

        <LinearLayout
            android:id="@+id/paradigm_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider"
            android:showDividers="middle">

            <TextView
                android:id="@+id/detail_paradigm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/TextBody"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/TextBody"
                android:textSize="18sp"
                android:text="Uses: "/>

            <TextView
                android:id="@+id/detail_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/TextBody"
                android:textSize="18sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/code_background"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Tag"
                android:textSize="18sp"
                android:text="Example:"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/detail_example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/TextBody"
                android:textSize="18sp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>